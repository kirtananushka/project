<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <error-page>
        <error-code>404</error-code>
        <location>/jsp/error/error404.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/jsp/error/error500.jsp</location>
    </error-page>
    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/jsp/error/error.jsp</location>
    </error-page>

    <servlet>
        <servlet-name>Main page</servlet-name>
        <jsp-file>/jsp/user/common/main.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Main page</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Authentication page</servlet-name>
        <jsp-file>/jsp/user/common/login.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Authentication page</servlet-name>
        <url-pattern>/authentication</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Registration page</servlet-name>
        <jsp-file>/jsp/user/common/registration.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Registration page</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Registered page</servlet-name>
        <jsp-file>/jsp/user/common/registration_successful.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Registered page</servlet-name>
        <url-pattern>/registration_successful</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SendMessage page</servlet-name>
        <jsp-file>/jsp/user/common/send_message.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>SendMessage page</servlet-name>
        <url-pattern>/send_message</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SendMessageSuccessful page</servlet-name>
        <jsp-file>/jsp/user/common/message_sent_successful.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>SendMessageSuccessful page</servlet-name>
        <url-pattern>/message_sent_successful</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Available films page</servlet-name>
        <jsp-file>/jsp/user/common/films.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Available films page</servlet-name>
        <url-pattern>/films</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>Test page</servlet-name>
        <jsp-file>/jsp/user/admin/test.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Test page</servlet-name>
        <url-pattern>/user/admin/test</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Testnew page</servlet-name>
        <jsp-file>/test.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Testnew page</servlet-name>
        <url-pattern>/test</url-pattern>
    </servlet-mapping>


</web-app>